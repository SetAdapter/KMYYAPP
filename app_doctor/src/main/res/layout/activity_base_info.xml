<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/main_view"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/app_background"
              android:orientation="vertical">

    <include layout="@layout/app_base_title"></include>

    <LinearLayout
        android:id="@+id/ll_info_head"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/app_color_white"
        android:orientation="vertical"
        android:paddingBottom="10dp"
        android:paddingTop="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/color_main_white"
            android:gravity="center">

            <TextView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:background="@drawable/green_circle"/>

            <TextView
                android:layout_width="85dp"
                android:layout_height="1dp"
                android:background="@color/listview_line"/>

            <TextView
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:background="@drawable/deep_green_circle"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:background="@color/color_main_white"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="基本资料"/>

            <TextView
                android:layout_width="40dp"
                android:layout_height="1dp"
                android:background="@color/listview_line"
                android:visibility="invisible"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="上传档案"/>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_info_name_icon"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <EditText
            android:background="@color/color_main_white"
            android:id="@+id/et_info_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/app_padding"
            android:layout_weight="1"
            android:singleLine="true"
            android:textColor="@color/color_tag_string"
            android:textSize="@dimen/big_font_size"/>

        <ImageView
            android:id="@+id/iv_info_head_icon"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/default_avatar_patient"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/next_unselect"/>

    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/divide_size"
        android:background="@color/color_listview_divider"/>
    <!--身份证-->
    <LinearLayout
        android:id="@+id/ll_id_card"
        android:layout_width="match_parent"
        android:layout_height="@dimen/list_item_height"
        android:layout_marginTop="8dp"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/tv_id_card_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/app_padding"
            android:layout_weight="1"
            android:singleLine="true"
            android:text="身份证"
            android:textColor="@color/color_tag_string"
            android:textSize="@dimen/big_font_size"/>

        <EditText
            android:id="@+id/et_id_card"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:background="@color/color_main_white"
            android:gravity="right"
            android:textColor="@color/color_sub_string"
            android:textSize="@dimen/middle_font_size"/>

        <ImageView
            android:id="@+id/iv_arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/next_unselect"
            android:visibility="invisible"/>

    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/divide_size"
        android:background="@color/color_listview_divider"/>
    <!--性别-->
    <LinearLayout
        android:id="@+id/ll_info_gender"
        android:layout_width="match_parent"
        android:layout_height="@dimen/list_item_height"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_gender_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/app_padding"
            android:layout_weight="1"
            android:singleLine="true"
            android:text="性别"
            android:textColor="@color/color_tag_string"
            android:textSize="@dimen/big_font_size"/>

        <TextView
            android:id="@+id/tv_info_gender"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:textColor="@color/color_sub_string"
            android:textSize="@dimen/middle_font_size"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/next_unselect"
            android:visibility="invisible"/>
    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/divide_size"
        android:background="@color/color_listview_divider"/>
    <!--性别-->


    <!--年龄-->
    <LinearLayout
        android:id="@+id/ll_info_age"
        android:layout_width="match_parent"
        android:layout_height="@dimen/list_item_height"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_age_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/app_padding"
            android:layout_weight="1"
            android:singleLine="true"
            android:text="年龄"
            android:textColor="@color/color_tag_string"
            android:textSize="@dimen/big_font_size"/>

        <TextView

            android:id="@+id/tv_info_age"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:textColor="@color/color_sub_string"
            android:textSize="@dimen/middle_font_size"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/next_unselect"
            android:visibility="invisible"/>
    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/divide_size"
        android:background="@color/color_listview_divider"/>
    <!--电话-->
    <LinearLayout
        android:id="@+id/ll_info_number"
        android:layout_width="match_parent"
        android:layout_height="@dimen/list_item_height"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/app_padding"
            android:layout_weight="1"
            android:singleLine="true"
            android:text="@string/phone_number"
            android:textColor="@color/color_tag_string"
            android:textSize="@dimen/big_font_size"/>

        <EditText
            android:id="@+id/et_phone_number"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:background="@color/color_main_white"
            android:gravity="right"
            android:inputType="phone"
            android:textColor="@color/color_sub_string"
            android:textSize="@dimen/middle_font_size"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/next_unselect"
            android:visibility="invisible"/>
    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/divide_size"
        android:background="@color/color_listview_divider"/>
    <!--住址-->
    <LinearLayout
        android:id="@+id/ll_info_address"
        android:layout_width="match_parent"
        android:layout_height="@dimen/list_item_height"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/app_padding"
            android:layout_weight="1"
            android:singleLine="true"
            android:text="住址"
            android:textColor="@color/color_tag_string"
            android:textSize="@dimen/big_font_size"/>

        <EditText
            android:id="@+id/et_address"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:background="@color/color_main_white"
            android:gravity="right"
            android:textColor="@color/color_sub_string"
            android:textSize="@dimen/middle_font_size"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/next_unselect"
            android:visibility="invisible"/>
    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/divide_size"
        android:background="@color/color_listview_divider"/>
    <!--关系-->
    <LinearLayout
        android:id="@+id/ll_info_relation"
        android:layout_width="match_parent"
        android:layout_height="@dimen/list_item_height"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:visibility="gone">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/app_padding"
            android:layout_weight="1"
            android:singleLine="true"
            android:text="关系"
            android:textColor="@color/color_tag_string"
            android:textSize="@dimen/big_font_size"/>

        <TextView
            android:id="@+id/tv_info_relation"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:background="@color/color_main_white"
            android:gravity="right"
            android:text="请选择"
            android:textColor="@color/color_sub_string"
            android:textSize="@dimen/middle_font_size"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/next_unselect"
            android:visibility="visible"/>
    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/divide_size"
        android:background="@color/color_listview_divider"/>

    <!--备注-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:text="备注"
            android:textColor="#666666"
            android:textSize="@dimen/large_font_size"/>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="@dimen/divide_size"
            android:background="@color/divider"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edit_shape"
            android:orientation="horizontal"
            android:paddingLeft="10dp"
            android:paddingRight="20dp">


            <EditText
                android:id="@+id/et_info_remark"
                style="@style/edit_setting"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:cursorVisible="true"
                android:gravity="top"
                android:hint="请输入备注"
                android:inputType="textMultiLine"
                android:maxLines="10"
                android:minLines="2"
                android:textColor="#333333"
                android:textColorHint="#b3b3b3"
                />

        </LinearLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="@dimen/divide_size"
            android:background="@color/divider"/>


    </LinearLayout>


</LinearLayout>
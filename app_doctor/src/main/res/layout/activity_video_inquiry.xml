<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/color_main_white"
    >

    <include layout="@layout/app_base_title"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15px">

        <TextView
            android:id="@+id/tv_head"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="视话问诊"
            android:gravity="center_horizontal"
            android:textSize="@dimen/extra_extra_large_font_size"
            android:textColor="#0accce"/>
        <TextView
            android:id="@+id/tv_head_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="文字、图片免费为用户提供健康咨询"
            android:textSize="@dimen/extra_large_font_size"
            android:gravity="center_horizontal"
            android:textColor="#0accce"/>
        <ImageView
            android:layout_marginTop="20dp"
            android:id="@+id/iv_info"
            android:layout_width="300dp"
            android:layout_height="180dp"
            android:src="@mipmap/img_shwz"
            android:layout_gravity="center_horizontal"/>
    </LinearLayout>
    <!--service describe-->
    <LinearLayout
        android:layout_marginTop="10dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:paddingRight="10dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="服务介绍"
            android:textSize="@dimen/middle_font_size"
            android:textColor="#333333"/>

        <TextView
            android:id="@+id/tv_info1"
            android:gravity="left"
            android:layout_marginTop="15px"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="@dimen/small_font_size"
            android:textColor="#666666"
            android:lineSpacingExtra="3dp"/>
        <TextView
            android:id="@+id/tv_info2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="@dimen/small_font_size"
            android:textColor="#666666"
            android:lineSpacingExtra="3dp"/>
        <TextView
            android:id="@+id/tv_info3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="@dimen/small_font_size"
            android:textColor="#666666"
            android:lineSpacingExtra="3dp"/>
        <Button
            android:layout_marginTop="13dp"
            android:layout_marginBottom="10dp"
            android:id="@+id/btn_service_activation"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="开通服务"
            android:textSize="@dimen/large_font_size"
            android:textColor="@color/white"
            android:background="#0accce"/>


    </LinearLayout>
        </LinearLayout>
    </ScrollView>


</LinearLayout>
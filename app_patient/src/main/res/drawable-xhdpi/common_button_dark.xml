<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:id="@+id/main_button">
        <selector>
            <item android:state_pressed="true">
                <shape>
                    <!--<corners android:radius="1dip"/>-->
                    <solid android:color="@color/color_button_click_green"/>
                    <stroke
                        android:width="1px"
                        android:color="@color/color_button_click_green"/>
                </shape>
            </item>
            <item android:state_enabled="false">
                <shape>
                    <!--<corners android:radius="1dip"/>-->
                    <solid android:color="@color/common_text6"/>
                    <stroke
                        android:width="1px"
                        android:color="@color/common_stroke"/>
                </shape>
            </item>
            <item>
                <shape>
                    <!--<corners android:radius="1dip"/>-->

                    <solid android:color="@color/color_button_click_green"/>

                    <stroke
                        android:width="1px"
                        android:color="@color/color_button_click_green"/>
                </shape>
            </item>
        </selector>
    </item>

</layer-list>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_background"
    android:orientation="vertical">

    <include layout="@layout/common_titlebar" />

    <RadioGroup
        android:id="@+id/rgPlayMode"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RadioButton
            android:id="@+id/rbAlipay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:button="@null"
            android:checked="true"
            android:drawablePadding="10dp"
            android:drawableLeft="@drawable/icon_zfb"
            android:drawableRight="@drawable/selector_playmode"
            android:paddingBottom="10dp"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:paddingTop="10dp"
            android:background="@drawable/selector_gray"
            android:text="支付宝支付"
            android:textColor="@color/common_text1"
            android:textSize="@dimen/big_font_size" />


        <RadioButton
            android:id="@+id/rbWeChat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:button="@null"
            android:checked="false"
            android:drawableLeft="@drawable/icon_weixin"
            android:drawablePadding="10dp"
            android:drawableRight="@drawable/selector_playmode"
            android:paddingBottom="10dp"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:paddingTop="10dp"
            android:background="@drawable/selector_gray"
            android:text="微信支付"
            android:textColor="@color/common_text1"
            android:textSize="@dimen/big_font_size" />

    </RadioGroup>

    <Button
        android:id="@+id/btnImmediatelyPay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:background="@drawable/common_button_selector"
        android:gravity="center"
        android:text="立即支付"
        android:textColor="@color/common_color_white"
        android:textSize="18dp" />


</LinearLayout>

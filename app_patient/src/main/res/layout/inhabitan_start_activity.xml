<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <include layout="@layout/common_titlebar"/>

    <ScrollView
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

        <LinearLayout
                android:orientation="vertical"
                android:background="@color/color_main_bg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:orientation="horizontal">

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="甲方:"
                        android:padding="12dp"
                        android:textColor="@color/primary_text_color"
                        android:textSize="14sp"/>

                <TextView
                        android:id="@+id/firstparty"
                        android:layout_width="wrap_content"
                        android:layout_height="35dp"
                        android:layout_marginLeft="12dp"
                        android:gravity="center"
                        android:paddingLeft="8dp"
                        android:paddingRight="8dp"
                        android:minWidth="200dp"
                        android:text=""
                        android:textColor="@color/primary_text_color"
                        android:textSize="14sp"/>

            </LinearLayout>

            <View
                    android:layout_width="match_parent"
                    android:layout_height="0.7dp"
                    android:background="#dcdcdc"/>

            <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="8dp"
                    android:paddingLeft="12dp"
                    android:paddingRight="12dp"
                    android:paddingTop="8dp">

                <LinearLayout
                        android:id="@+id/text_td_ll"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:background="@drawable/edit_bg"
                        android:clickable="true"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                    <TextView
                            android:id="@+id/doctorteamname"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:layout_weight="1"
                            android:textColor="@color/primary_text_color"
                            android:textSize="14sp"/>

                    <TextView
                            android:id="@+id/doctorteammaster"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:drawableRight="@drawable/next_unselect"
                            android:textColor="@color/primary_text_color"
                            android:textSize="14sp"/>

                    <TextView
                            android:id="@+id/image_gh"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_marginLeft="20dp"
                            android:layout_marginRight="12dp"
                            android:background="@drawable/inhabitan"
                            android:text="选择签约医生"
                            android:textColor="#ffffff"
                            android:textSize="14sp"/>

                </LinearLayout>

            </RelativeLayout>


            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/divider_line"
                    android:orientation="horizontal">

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="12dp"
                        android:text="乙方 "
                        android:textColor="@color/second_text_color"
                        android:textSize="14sp"/>

                <!--<EditText-->
                <!--android:id="@+id/secondparty"-->
                <!--android:layout_width="135dp"-->
                <!--android:layout_height="25dp"-->
                <!--android:layout_marginLeft="12dp"-->
                <!--android:background="@drawable/edit_bg"-->
                <!--android:text="张某人"-->
                <!--android:paddingLeft="8dp"-->
                <!--android:paddingRight="8dp"-->
                <!--android:textColor="#333333"-->
                <!--android:textSize="14sp"/>-->
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:orientation="horizontal"
                android:paddingBottom="8dp"
                android:paddingLeft="12dp"
                android:paddingRight="8dp"
                android:paddingTop="8dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.2"
                    android:text="家庭成员代表:"
                    android:textColor="@color/primary_text_color"
                    android:textSize="14sp" />

                <EditText
                    android:id="@+id/signature_username"
                    android:layout_width="0dp"
                    android:layout_height="35dp"

                    android:layout_weight="3"
                    android:paddingLeft="8dp"
                    android:paddingRight="8dp"
                    android:textColor="@color/primary_text_color"
                    android:textSize="13dp" />

            </LinearLayout>

            <!--<LinearLayout-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:focusable="true"-->
            <!--android:focusableInTouchMode="true"-->
            <!--android:orientation="horizontal"-->
            <!--android:paddingBottom="8dp"-->
            <!--android:paddingLeft="12dp"-->
            <!--android:paddingRight="8dp"-->
            <!--android:paddingTop="8dp">-->

            <!--<TextView-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:text="性别:"-->
            <!--android:textColor="@color/primary_text_color"-->
            <!--android:textSize="14sp"/>-->

            <!--<TextView-->
            <!--android:id="@+id/sex_tv"-->
            <!--android:layout_width="50dp"-->
            <!--android:layout_height="25dp"-->
            <!--android:layout_marginLeft="12dp"-->
            <!--android:background="@drawable/edit_bg"-->
            <!--android:gravity="center"-->
            <!--android:hint="男"-->
            <!--android:paddingLeft="8dp"-->
            <!--android:paddingRight="8dp"-->
            <!--android:textColor="@color/primary_text_color"-->
            <!--android:textSize="13sp"/>-->

            <!--</LinearLayout>-->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:orientation="horizontal"
                android:paddingBottom="8dp"
                android:paddingLeft="12dp"
                android:paddingRight="8dp"
                android:paddingTop="10dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.2"
                    android:text="身份证号:"
                    android:textColor="@color/primary_text_color"
                    android:textSize="14sp" />

                <EditText
                    android:id="@+id/IDNumber_edt"
                    android:layout_width="0dp"
                    android:layout_height="35dp"
                    android:layout_weight="3"
                    android:inputType="phone"
                    android:minWidth="135dp"
                    android:paddingLeft="8dp"
                    android:paddingRight="8dp"
                    android:textColor="@color/primary_text_color"
                    android:textSize="13dp" />

            </LinearLayout>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:orientation="horizontal"
                    android:paddingBottom="8dp"
                    android:paddingLeft="12dp"
                    android:paddingRight="8dp"
                    android:paddingTop="10dp">

                <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1.2"
                        android:layout_height="wrap_content"
                        android:text="联系电话:"
                        android:textColor="@color/primary_text_color"
                        android:textSize="14sp"/>

                <EditText
                        android:id="@+id/familyhealthno"
                        android:layout_width="0dp"
                        android:layout_weight="3"
                        android:layout_height="35dp"
                        android:inputType="phone"
                        android:paddingLeft="8dp"
                        android:paddingRight="8dp"
                        android:textColor="@color/primary_text_color"
                        android:textSize="13dp"/>

            </LinearLayout>


            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:padding="12dp"
                    >

                <TextView
                        android:id="@+id/relation_phone"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="手机验证码:"
                        android:textColor="@color/primary_text_color"
                        android:textSize="14sp"/>

                <EditText
                        android:id="@+id/identify_code"
                        android:layout_width="0dp"
                        android:layout_weight="1.5"
                        android:layout_height="@dimen/btn_height"
                        android:layout_marginEnd="11dp"
                        android:layout_marginRight="11dp"
                        android:background="@drawable/edit_bg"
                        android:gravity="center_vertical"
                        android:hint="请输入验证码"
                        android:paddingLeft="8dp"
                        android:paddingRight="8dp"
                        android:textSize="13sp"/>

                <Button
                        android:id="@+id/get_identify_code"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="@dimen/btn_height"
                        android:textColor="@color/white"
                        android:background="@drawable/common_button_selector"
                        android:text="@string/get_identify_code"/>
                <!--<TextView-->
                <!--android:id="@+id/get_identify_code"-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:layout_toRightOf="@+id/identify_code"-->
                <!--android:background="@drawable/inhabitan"-->
                <!--android:text="获取验证码"-->
                <!--android:textColor="#ffffff"-->
                <!--android:textSize="14sp"/>-->
            </LinearLayout>

            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:background="@color/divider_line"
                    android:padding="12dp"
                    android:text="家庭住址"
                    android:textColor="@color/second_text_color"
                    android:textSize="@dimen/middle_font_size"/>

            <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/divider"/>

            <LinearLayout
                    android:id="@+id/area_rl"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:padding="12dp">

                <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="所在区域"
                        android:textColor="@color/primary_text_color"
                        android:textSize="@dimen/middle_font_size"/>

                <TextView
                        android:id="@+id/area_tv"
                        android:layout_width="0dp"
                        android:layout_weight="3"
                        android:layout_height="wrap_content"
                        android:drawableRight="@drawable/next_unselect"
                        android:textColor="@color/primary_text_color"
                        android:textSize="@dimen/middle_font_size"/>
            </LinearLayout>

            <View
                    android:layout_width="match_parent"
                    android:layout_height="0.7dp"
                    android:background="@color/divider"/>

            <LinearLayout
                    android:id="@+id/row_rl"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:paddingBottom="8dp"
                    android:paddingLeft="12dp"
                    android:paddingRight="12dp"
                    android:paddingTop="8dp">

                <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="街道："
                        android:textColor="@color/primary_text_color"
                        android:textSize="@dimen/middle_font_size"/>

                <TextView
                        android:id="@+id/tvStrweetName"
                        android:layout_width="0dp"
                        android:layout_weight="3"
                        android:layout_height="wrap_content"
                        android:drawableRight="@drawable/next_unselect"
                        android:textColor="@color/primary_text_color"
                        android:textSize="@dimen/middle_font_size"/>
            </LinearLayout>

            <View
                    android:layout_width="match_parent"
                    android:layout_height="0.7dp"
                    android:background="@color/divider"/>

            <EditText
                    android:id="@+id/familyaddress"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:hint="请输入家庭详细地址"
                    android:background="@drawable/edit_bg"
                    android:padding="12dp"
                    android:layout_marginRight="4dp"
                    android:layout_marginLeft="4dp"
                    android:textColor="@color/primary_text_color"
                    android:textSize="14sp"/>

            <View
                    android:layout_width="match_parent"
                    android:layout_height="12dp"
                    android:background="@color/divider_line"/>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:gravity="center_vertical"
                    android:paddingBottom="8dp"
                    android:paddingLeft="12dp"
                    android:paddingRight="8dp"
                    android:paddingTop="8dp">

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="家庭成员信息:"
                        android:textColor="@color/primary_text_color"
                        android:textSize="14sp"/>

                <TextView
                        android:id="@+id/add_new_member"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="12dp"
                        android:layout_marginRight="12dp"
                        android:background="@drawable/inhabitan"
                        android:text="+添加新成员"
                        android:textColor="#ffffff"
                        android:textSize="14sp"/>
            </LinearLayout>

            <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    android:orientation="vertical"
                    android:paddingLeft="12dp"
                    android:paddingRight="12dp">

                <com.kmwlyy.patient.weight.NoScrollListView
                        android:id="@+id/add_list"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:divider="@null"/>
            </LinearLayout>

            <LinearLayout
                    android:id="@+id/confirm_ll"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                <Button
                        android:id="@+id/confirm_tv"
                        android:layout_width="match_parent"
                        android:layout_height="44dp"
                        android:background="@drawable/app_btn"
                        android:gravity="center"
                        android:text="确定签约"
                        android:textColor="#ffffff"
                        android:textSize="18sp"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
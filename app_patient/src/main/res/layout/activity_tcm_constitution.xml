<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/color_main_bg"
              android:orientation="vertical">

    <include layout="@layout/app_base_title"/>


    <com.astuetz.PagerSlidingTabStrip xmlns:app="http://schemas.android.com/apk/res-auto"
                                      android:id="@+id/tabs"
                                      android:layout_width="match_parent"
                                      android:layout_height="48dp"
                                      android:background="@color/white"
                                      app:pstsDividerColor="@color/white"
                                      app:pstsDividerPadding="@dimen/list_padding"
                                      app:pstsIndicatorColor="@color/primary_color"
                                      app:pstsIndicatorHeight="@dimen/indicator_height"
                                      app:pstsShouldExpand="false"
                                      app:pstsTabBackground="@drawable/empty"
                                      app:pstsTabPaddingLeftRight="5dp"
                                      app:pstsUnderlineColor="@color/divider"
                                      app:pstsUnderlineHeight="@dimen/divide_size"/>

    <android.support.v4.view.ViewPager
            android:id="@+id/viewPager"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"/>

</LinearLayout>

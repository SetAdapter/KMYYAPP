<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/rl_container"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/app_color_white">

    <LinearLayout
        android:id="@+id/ll_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="70dp"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/remote_user_icon"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_gravity="center_horizontal"
            android:scaleType="fitXY"
            android:src="@drawable/icon_face_default"/>
        <TextView
            android:id="@+id/remote_user_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:ellipsize="end"
            android:gravity="center"
            android:singleLine="true"
            android:text="张三丰"
            android:textColor="@color/color_main_string"
            android:textSize="@dimen/extra_large_font_size"/>
    </LinearLayout>


    <!--网速时间-->
    <LinearLayout
        android:id="@+id/wrapper_session_stats"
        android:layout_below="@+id/ll_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:gravity="center_horizontal"
        android:orientation="vertical">
        <!--消息-->
        <TextView
            android:id="@+id/app_notification"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/room_prepare"
            android:textColor="@color/color_tag_string"
            android:textSize="@dimen/big_font_size"/>
        <TextView
            android:id="@+id/stat_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:layout_marginTop="5dp"
            android:text="00:00"
            android:textColor="@color/color_tag_string"
            android:textSize="18sp"
            android:textStyle="normal"
            android:visibility="gone"/>
        <TextView
            android:id="@+id/stat_bytes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:singleLine="true"
            android:text="1 kb/s"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:textStyle="bold"
            android:visibility="gone"/>
    </LinearLayout>

    <!--退出-->
    <Button
        android:id="@+id/btn_stop"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="120dp"
        android:background="@drawable/shape_button_blue"
        android:text="挂断"
        android:textColor="@android:color/white"
        android:textSize="@dimen/big_font_size"
        android:visibility="visible"
    />

    <LinearLayout
        android:id="@+id/layout_dialog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="65dp"
        android:gravity="center_horizontal"
        android:visibility="gone"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">
        <Button
        android:id="@+id/btn_no"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:background="@drawable/go_micro_button_background1"
        />
        <Button
            android:id="@+id/btn_yes"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:background="@drawable/go_micro_button_background"
            android:layout_marginLeft="65dp"
        />

    </LinearLayout>

    <ImageView
        android:id="@+id/iv_line"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_line"
        android:layout_marginTop="300dp"
        />
</RelativeLayout>
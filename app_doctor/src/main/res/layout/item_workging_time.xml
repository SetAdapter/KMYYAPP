<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:paddingLeft="20dp"
              android:paddingRight="20dp"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_margin="10dp"
              android:background="@color/color_main_white"
              android:orientation="vertical"
              android:paddingBottom="30dp">

    <TextView
        android:id="@+id/tv_working_time_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:text="上午"
        android:textColor="#333333"
        android:textSize="@dimen/middle_font_size"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_begin_time"
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:layout_weight="1"
            android:background="@drawable/unselect_border"
            android:gravity="center"
            android:text="08:00"
            android:textColor="#333333"
            android:textSize="@dimen/large_font_size"/>

        <View
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:layout_width="0dp"
            android:layout_height="@dimen/divide_size"
            android:layout_weight="0.1"
            android:background="@color/color_listview_divider">

        </View>

        <TextView
            android:id="@+id/tv_end_time"
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:layout_weight="1"
            android:background="@drawable/unselect_border"
            android:gravity="center"
            android:text="12:00"
            android:textColor="#333333"
            android:textSize="@dimen/large_font_size"/>
    </LinearLayout>
</LinearLayout>
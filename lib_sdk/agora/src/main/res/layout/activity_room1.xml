<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/ll_total_container"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">
    <!--title-->
    <include layout="@layout/app_base_title"/>

    <!--<SurfaceView-->
        <!--android:layout_width="0dp"-->
        <!--android:layout_height="0dp"-->
        <!--/>-->

    <!--本地通话 和 远程通话用户头像列表-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/app_primary_color">
        <!--远程信息-->
        <include layout="@layout/view_remote_user1"/>
        <!--远程头像-->
        <RelativeLayout
            android:id="@+id/user_remote_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
        <!--工具-->
        <LinearLayout
            android:id="@+id/top_actions_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="50dp"
            android:gravity="center"
            android:visibility="gone"
            android:orientation="vertical">
            <!--工具-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="10dp">
                <!--麦克风-->
                <CheckBox
                    android:id="@+id/action_muter"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:button="@null"
                    android:checked="false"
                    android:drawableTop="@drawable/check_selector_mic"
                    android:gravity="center_horizontal"
                    android:text="@string/tool_muter"
                    android:textSize="@dimen/middle_font_size"
                    android:textColor="@color/app_color_white"
                    android:padding="10dp"
                />
                <!--摄像头-->
                <CheckBox
                    android:id="@+id/action_camera_enabler"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:button="@null"
                    android:checked="false"
                    android:drawableTop="@drawable/check_selector_camera"
                    android:gravity="center_horizontal"
                    android:text="@string/tool_camera_enabler"
                    android:textSize="@dimen/middle_font_size"
                    android:textColor="@color/app_color_white"
                    android:padding="10dp"/>
                <!--不可用摄像头(语音时才用到)-->
                <CheckBox
                    android:visibility="gone"
                    android:id="@+id/action_camera_enabler_disable"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:button="@null"
                    android:checked="false"
                    android:drawableTop="@drawable/ic_close_disable"
                    android:gravity="center_horizontal"
                    android:text="@string/tool_camera_enabler"
                    android:textSize="@dimen/middle_font_size"
                    android:textColor="@color/app_color_white"
                    android:padding="10dp"/>
                <!--扬声器-->
                <CheckBox
                    android:id="@+id/action_speaker"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:button="@null"
                    android:checked="false"
                    android:drawableTop="@drawable/check_selector_speak"
                    android:gravity="center_horizontal"
                    android:text="@string/tool_speaker"
                    android:textSize="@dimen/middle_font_size"
                    android:textColor="@color/app_color_white"
                    android:padding="10dp"/>
                <!--开处方-->
                <TextView
                    android:id="@+id/tv_recipe"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:drawableTop="@drawable/ic_recipe"
                    android:gravity="center_horizontal"
                    android:text="@string/make_recipe"
                    android:textSize="@dimen/middle_font_size"
                    android:textColor="@color/app_color_white"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="10dp">

                <!--网络-->

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical">
                    <ImageView
                        android:id="@+id/iv_speed"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_net1"/>
                    <TextView
                        android:id="@+id/tv_speed"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="@string/tool_speed"
                        android:textSize="@dimen/middle_font_size"
                        android:textColor="@color/app_color_white"/>
                </LinearLayout>

                <!--挂断-->
                <ImageView
                    android:id="@+id/action_hung_up"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:src="@drawable/go_micro_button_background1"/>

                <!--收起-->
                <TextView
                    android:id="@+id/tv_chat"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:drawableTop="@drawable/ic_chat"
                    android:gravity="center_horizontal"
                    android:text="@string/tool_chat"
                    android:textSize="@dimen/middle_font_size"
                    android:textColor="@color/app_color_white"/>
            </LinearLayout>

        </LinearLayout>
        <!--本地头像-->
        <RelativeLayout
            android:id="@+id/user_local_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="58dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
        />
        <!--视频时，左上角的信息显示-->
        <LinearLayout
            android:id="@+id/ll_user_info"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:orientation="vertical"
            android:layout_margin="20dp"
            android:visibility="gone">
            <TextView
                android:id="@+id/tv_username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:textSize="@dimen/extra_large_font_size"
                android:textColor="@color/color_main_string"/>
            <TextView
                android:id="@+id/tv_usertime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:textSize="@dimen/big_font_size"
                android:textColor="@color/color_main_string"/>
        </LinearLayout>

        <!--切换摄像头-->
        <ImageView
            android:id="@+id/action_camera_switcher"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:padding="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/ic_camera_change"/>
    </RelativeLayout>

</LinearLayout>
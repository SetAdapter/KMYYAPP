<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/app_background"
              android:orientation="vertical">

    <include layout="@layout/app_base_title"/>


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/divide_size"
        android:background="@color/divider"
        android:layout_marginTop="10dp"
        />


    <!-- 推送提醒 -->
    <LinearLayout
        android:id="@+id/push_notice"
        android:layout_width="match_parent"
        android:layout_height="@dimen/list_item_height"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="12dp"
        android:paddingRight="12dp">



        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:singleLine="true"
            android:text="@string/push_notice"
            android:textColor="@color/primary_text_color"
            android:textSize="@dimen/big_font_size" />

        <CheckBox
          android:id="@+id/switchCb"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:checked="true"
          android:button="@drawable/switch_cb"
          />



    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/divide_size"
        android:background="@color/divider" />


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/divide_size"
        android:layout_marginTop="10dp"
        android:background="@color/divider" />


    <!-- 修改密码 -->
    <LinearLayout
        android:id="@+id/modify_password"
        android:layout_width="match_parent"
        android:layout_height="@dimen/list_item_height"
        android:background="@drawable/layout_click_selector"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="12dp"
        android:paddingRight="12dp">



        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:singleLine="true"
            android:text="@string/string_modify_pwd"
            android:textColor="@color/primary_text_color"
            android:textSize="@dimen/big_font_size" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/next_unselect" />

    </LinearLayout>



    <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/divide_size"
        android:background="@color/divider" />


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/divide_size"
        android:layout_marginTop="10dp"
        android:background="@color/divider" />


    <!-- 关于我们 -->
    <LinearLayout
        android:id="@+id/suggest_feedback"
        android:layout_width="match_parent"
        android:layout_height="@dimen/list_item_height"
        android:background="@drawable/layout_click_selector"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="12dp"
        android:paddingRight="12dp">


        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:singleLine="true"
            android:text="@string/suggest_feedback"
            android:textColor="@color/primary_text_color"
            android:textSize="@dimen/big_font_size" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/next_unselect" />

    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/divide_size"
        android:background="@color/divider" />

    <!-- 关于我们 -->
    <LinearLayout
        android:id="@+id/about_us"
        android:layout_width="match_parent"
        android:layout_height="@dimen/list_item_height"
        android:background="@drawable/layout_click_selector"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="12dp"
        android:paddingRight="12dp">


        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:singleLine="true"
            android:text="@string/about_us"
            android:textColor="@color/primary_text_color"
            android:textSize="@dimen/big_font_size" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/next_unselect" />

    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/divide_size"
        android:background="@color/divider" />

    <!-- 给我们评分 -->
    <LinearLayout
        android:id="@+id/grade"
        android:layout_width="match_parent"
        android:layout_height="@dimen/list_item_height"
        android:background="@drawable/layout_click_selector"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="12dp"
        android:paddingRight="12dp">



        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:singleLine="true"
            android:text="@string/grade_for"
            android:textColor="@color/primary_text_color"
            android:textSize="@dimen/big_font_size" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/next_unselect" />

    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/divide_size"
        android:background="@color/divider" />

    <!--检查更新-->
    <LinearLayout
        android:id="@+id/update"
        android:layout_width="match_parent"
        android:layout_height="@dimen/list_item_height"
        android:background="@drawable/layout_click_selector"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="12dp"
        android:paddingRight="12dp">



        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:singleLine="true"
            android:text="@string/check_update"
            android:textColor="@color/primary_text_color"
            android:textSize="@dimen/big_font_size" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/next_unselect" />

    </LinearLayout>


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/divide_size"
        android:background="@color/divider"
        android:layout_marginTop="10dp"
        />

    <TextView
        android:id="@+id/tv_loginOut"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="@string/string_logout"
        android:textColor="@color/color_main_orange"
        android:textSize="@dimen/big_font_size"
        android:gravity="center"
        android:background="@color/white"
        />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/divide_size"
        android:background="@color/divider" />




</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <com.kmwlyy.patient.kdoctor.LinearGradientBorderLayout
        android:id="@+id/gradient_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:checked="false"
        app:childBackground="@color/white"
        app:radius1="40"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        app:defaultColor="@color/line"
        app:strokeWidth1="3">

        <com.kmwlyy.patient.kdoctor.LinearGradientTextView
            android:id="@+id/text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/select_shape_blue"
            android:paddingBottom="5dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="5dp"
            android:text=""
            app:checked = "false"
            android:textColor="#333333"
            android:textSize="15sp">

        </com.kmwlyy.patient.kdoctor.LinearGradientTextView>
    </com.kmwlyy.patient.kdoctor.LinearGradientBorderLayout>
</LinearLayout>
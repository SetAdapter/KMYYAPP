<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/color_main_bg">

    <!--<View style="@style/dividing_line"-->
        <!--android:layout_marginLeft="10dp"/>-->

    <LinearLayout
        android:id="@+id/rl_endrug"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:paddingLeft="10dp"
        android:background="@color/app_color_white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_endrugtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/string_druglist_drugname"
                android:textColor="@color/color_tag_string"
                android:textSize="@dimen/big_font_size"/>

            <TextView
                android:id="@+id/tv_endrug"
                android:layout_width="0dp"
                android:layout_weight="3"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:textColor="@color/color_main_string"
                android:textSize="@dimen/big_font_size"/>

            <TextView
                android:id="@+id/tv_ensptitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="@string/string_druglist_sp"
                android:textColor="@color/color_tag_string"
                android:textSize="@dimen/big_font_size"/>

            <TextView
                android:id="@+id/tv_ensp"
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:textColor="@color/color_main_string"
                android:textSize="@dimen/big_font_size"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/string_druglist_usage"
                android:textColor="@color/color_tag_string"
                android:textSize="@dimen/big_font_size"/>

            <TextView
                android:id="@+id/tv_usage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:textColor="@color/color_main_string"
                android:textSize="@dimen/big_font_size"/>
        </LinearLayout>

    </LinearLayout>

    <View
        android:id="@+id/v_line"
        style="@style/dividing_line"
        android:layout_marginLeft="10dp"/>
</LinearLayout>
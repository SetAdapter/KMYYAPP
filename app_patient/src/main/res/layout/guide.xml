<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <android.support.v4.view.ViewPager
        android:id="@+id/guide_page"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <com.viewpagerindicator.IconPageIndicator xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/indicator"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_gravity="bottom|center_horizontal"
            android:layout_marginBottom="6dp" />

        <Button
            android:id="@+id/guide_enter"
            android:layout_width="wrap_content"
            android:layout_height="39dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/guide_enter_btn"
            android:minWidth="180dp"
            android:text="@string/guide_enter"
            android:textColor="@color/white"
            android:textSize="@dimen/extra_large_font_size" />

    </LinearLayout>

</FrameLayout>